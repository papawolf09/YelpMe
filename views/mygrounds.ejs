<%- include ("partials/header") %>

<div class="container px-0 secondContainer">
	<!-- <a href="/">home</a> -->
	<div class="jumbotron-fluid bg-light px-5 py-5 my-3">
		<h1 class="display-4s">Welcome to myground!!!</h1>
		<p>this is my favorite snaps</p>
		<a class="btn btn-purple"href="mygrounds/new">add new ground</a>
	</div>
	
	<div class="row">
		<% mygrounds.forEach( function(a) { %>
			<div class="col-12 col-md-4">
				<img class="img-thumbnail rounded-0 figure-img myground" src="<%= a.image %>" >	
				<p class="figure-caption text-center"><%= a.name %></p>
				<br>
			</div>
		<% }); %>
	</div>
</div>

<script type="text/javascript">
	$("li:contains('myground')").addClass("active");	
</script>

